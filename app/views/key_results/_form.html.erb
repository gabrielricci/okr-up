<%= form_for(key_result) do |f| %>
  <% if key_result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(key_result.errors.count, "error") %> prohibited this key result from being saved:</h2>

      <ul>
      <% key_result.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :objective_id %>
    <%= collection_select(:key_result, :objective_id, Objective.all, :id, :description, {prompt: true}, {class: "form-control"}) %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>
